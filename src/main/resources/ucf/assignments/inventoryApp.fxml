<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ucf.assignments.appController">
   <children>
      <MenuBar layoutX="20.0" layoutY="14.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="fileOne" mnemonicParsing="false" onAction="#clickOpen" text="Open..." />
                  <MenuItem fx:id="fileTwo" mnemonicParsing="false" onAction="#clickSave" text="Save..." />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="fileThree" mnemonicParsing="false" onAction="#clickClose" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem fx:id="editNew" mnemonicParsing="false" onAction="#clickNew" text="New" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="editDelete" mnemonicParsing="false" onAction="#clickDelete" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem fx:id="helpOne" mnemonicParsing="false" onAction="#clickGettingStarted" text="Getting Started" />
                  <MenuItem fx:id="helpTwo" mnemonicParsing="false" onAction="#clickAbout" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <TableView fx:id="tableView" editable="true" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="25.0">
        <columns>
          <TableColumn fx:id="columnValue" prefWidth="150.0" text="Value" />
          <TableColumn fx:id="columnSerial" prefWidth="150.0" text="Serial Number" />
            <TableColumn fx:id="columnName" minWidth="210.0" prefWidth="150.0" text="Name" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <contextMenu>
            <ContextMenu>
              <items>
                <MenuItem fx:id="rcDelete" mnemonicParsing="false" onAction="#rightClickDelete" text="Delete" />
              </items>
            </ContextMenu>
         </contextMenu>
      </TableView>
   </children>
</AnchorPane>
